{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": "./typescript",
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "declarationDir": "dist/typings/",
        "experimentalDecorators": true,
        "jsx": "react-jsx",
        "module": "commonjs",
        "noEmitOnError": true,
        "noImplicitThis": true,
        "noImplicitReturns": false,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "outDir": "dist/",
        "pretty": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "target": "es6",
        "lib": ["es6", "dom", "es7", "es2017"],
        "strict": true,
        "skipLibCheck": true,
        // "types": ["react", "react-dom"],
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "./types",
        "./typescript/**/*.ts",
        "./typescript/**/*.tsx",
    ],
    "exclude": [
        "node_modules",
        "build"
    ],
    "awesomeTypescriptLoaderOptions": {
        "useBabel": true,
        "useCache": true,
        "babelCore": "babel-core"
    }
}
